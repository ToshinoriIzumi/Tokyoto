<header class="text-gray-600 body-font shadow">
  <div class="container mx-auto flex flex-wrap p-5 flex-col md:flex-row items-center">
    <%= link_to image_tag('kocotto_logo.png', size: '75x75'), root_path%>
    <span class="ml-3 text-xl"> Kocotto</span>
    <nav class="md:ml-auto flex flex-wrap items-center text-base justify-center">
    <% if current_user.user_name.present? %>
      <%= link_to "#{current_user.user_name}さん", profile_path ,class: "mr-5 hover:text-gray-900" %>
    <% else %>
      <%= link_to "#{current_user.last_name + current_user.first_name}さん", profile_path ,class: "mr-5 hover:text-gray-900" %>
    <% end %>
      <%= link_to 'ログアウト', logout_path, method: :delete ,class: "mr-5 hover:text-gray-900" %>
      <%= link_to '病院検索', map_hospitals_path, class: "mr-5 hover:text-gray-900"%>
    </nav>
  </div>
</header>