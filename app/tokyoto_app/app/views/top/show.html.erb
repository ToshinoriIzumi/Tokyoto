  <section class= "basic-info text-center">
    <h3 class= "font-bold text-4xl"><%= @support.support_name %></h3>
  </section>
  <table class="table-auto">
    <tr>
      <td class="border px-4 py-2">制度内容</td>
      <td class="border px-4 py-2"><%= @support.content %></td>
    </tr>
    <tr>
      <td class="border px-4 py-2">申請方法</td>
      <td class="border px-4 py-2"><%= @support.application_method %></td>
    </tr>
    <tr>
      <td class="border px-4 py-2">申請期限</td>
      <td class="border px-4 py-2"><%= @support.application_limit %></td>
    </tr>
    <tr>
      <td class="border px-4 py-2">公式サイト</td>
      <td class="border px-4 py-2"><%= link_to @support.url, @support.url %></td>
    </tr>
  </table>
