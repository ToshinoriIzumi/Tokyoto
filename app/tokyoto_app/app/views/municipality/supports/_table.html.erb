<% supports.each do |support| %>
  <ul class="flex flex-wrap text-sm font-medium text-center text-gray-500 border-b border-gray-200 dark:border-gray-700 dark:text-gray-400">
    <li class="mr-2">
      <a class="inline-block p-2 text-white bg-yellow-500 rounded-t-lg active dark:bg-gray-300 dark:text-blue-00">
        <%= support.state_i18n %>
      </a>
    </li>
  </ul>
  <section class="mb-6">
    <div class="max-w-7xl px-8 py-4 bg-white rounded-lg shadow-md dark:bg-gray-800">

      <div class="flex items-center border-black-600">
        <% support.tags.each do |tag| %>
          <p class="px-3 py-1 mr-3 text-sm font-bold text-gray-100 transition-colors bg-<%= tag.decorate.color %>-400 rounded">
              <%= tag.name %>
          </p>
        <% end %>
        <%= link_to "編集", edit_municipality_support_path(support), class: "px-6 py-2 mr-5 text-base font-bold text-gray-100 transition-colors bg-orange-400 rounded md:ml-auto" %>

        <%= link_to "削除", municipality_support_path(support), method: :delete, data: { confirm: "削除しますか?" }  , class: "px-6 py-2 mr-5 text-base font-bold text-gray-100 transition-colors bg-red-400 rounded" %>
      </div>

      <div class="mt-2">
        <%= link_to "#{support.support_name}", top_path(support), class: "text-2xl font-bold text-gray-700 dark:text-white hover:text-gray-600 dark:hover:text-gray-200 hover:underline" %>
      </div>
      <div class="flex items-center justify-between mt-4">
          <%= link_to "公式サイト", support.url, target: "_blank", class: "text-blue-600 dark:text-blue-400 hover:underline" %>
          <div class="font-bold text-gray-700 cursor-pointer dark:text-gray-200">
            <% if support.application_limit.empty? %>
              <%= "締め切り： なし" %>
            <% else %>
              <%= "締め切り：" + support.application_limit %>
            <% end %>
          </div>
      </div>
    </div>
  </section>
<% end %>
