<section>
  <div class=" items-center px-5 py-12 lg:px-20">
    <div class="flex flex-col w-full max-w-md p-10 mx-auto my-6 transition duration-500 ease-in-out transform bg-white rounded-lg md:mt-0">
      <div class="mt-8">
        <div class="mt-6">
          <h1 class="text-xl font-bold mb-2">ログイン</h1>
          <%= form_with url: login_path, local: true, class: "space-y-6" do |f| %>
            <div class="space-y-1">
              <%= f.label "メールアドレス" %>
              <%= f.text_field :email, class: "block w-full px-5 py-3 text-base text-neutral-600 placeholder-gray-300 transition duration-500 ease-in-out transform border border-transparent rounded-lg bg-gray-50 focus:border-transparent focus:ring-2 focus:ring-blue-400 focus:ring-offset-2 focus:ring-offset-gray-300 border-gray-500" %>
              </div>
              <div class="space-y-1">
                <%= f.label "パスワード" %>
                <%= f.password_field :password, class: "block w-full px-5 py-3 text-base text-neutral-600 placeholder-gray-300 transition duration-500 ease-in-out transform border border-transparent rounded-lg bg-gray-50 focus:border-transparent focus:ring-2 focus:ring-blue-400 focus:ring-offset-2 focus:ring-offset-gray-300 border-gray-500" %>
              </div>
              <%= f.submit 'ログイン', class: "flex items-center justify-center w-full px-10 py-4 text-base font-medium text-center text-white transition duration-500 ease-in-out transform bg-blue-600 rounded-xl hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
            </div>
              <div class="flex items-center justify-between">
                <div class="text-sm">
                  <%= link_to "新規登録へ", new_user_path, { class: "font-medium text-blue-600 hover:text-blue-500 mr-2" } %>
                  <%= link_to "トップページへ", top_index_path, { class: "font-medium text-blue-600 hover:text-blue-500 mr-2" } %>
                </div>
              </div>
          <% end %>
