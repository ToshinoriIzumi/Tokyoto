<table class="table-auto">
  <thead>
    <tr>
      <th class="px-4 py-2">制度名</th>
      <th class="px-4 py-2">申込期限</th>
      <th class="px-4 py-2">公式サイト</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% supports.each do |support| %>
      <tr>
        <td class="border px-4 py-2"><%= link_to "#{support.support_name}", top_path(support) %></td>
        <td class="border px-4 py-2">
          <% if support.application_limit.empty? %>
            <%= "なし" %>
          <% else %>
            <%= support.application_limit %>
          <% end %>
        </td>
        <td class="border px-4 py-2"><%= link_to "公式サイト", support.url %></td>
      </tr>
    <% end %>
  </tbody>
</table>
